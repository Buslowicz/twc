{
  "compilerOptions": {
    "experimentalDecorators": true,
    "removeComments": true,
    "noEmitHelpers": true,
    "sourceMap": true,
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "dom",
      "es6"
    ]
  },
  "include": [
    "src/**/*.ts",
    "types/**/*.d.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "tests/*.test.ts"
  ]
}
