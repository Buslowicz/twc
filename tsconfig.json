{
  "compilerOptions": {
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitUseStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "pretty": true,
    "sourceMap": false,
    "strictNullChecks": false,
    "target": "es6",
    "lib": [
      "es7",
      "dom"
    ]
  },
  "include": [
    "decorators/*",
    "src/*",
    "targets/*",
    "tests/*",
    "types/*",
    "*.ts"
  ]
}
