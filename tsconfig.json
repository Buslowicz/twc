{
  "compilerOptions": {
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitUseStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "pretty": true,
    "sourceMap": false,
    "strictNullChecks": false,
    "target": "es6",
    "lib": [
      "es7",
      "dom"
    ],
    "outDir": "dist"
  },
  "include": [
    "src/*",
    "src/targets/*",
    "tests/*",
    "tests/targets/*",
    "tests/samples/*",
    "types/*",
    "*.ts"
  ]
}
